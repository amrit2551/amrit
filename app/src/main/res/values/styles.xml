<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ButtonStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">33dp</item>
    <item name="android:layout_marginEnd">33dp</item>
    <item name="android:textAllCaps">false</item>
</style>
    <style name="layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="imgView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="etLoginscreen">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">34dp</item>
        <item name="android:layout_marginEnd">34dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <style name="etSignup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">23dp</item>
        <item name="android:layout_marginEnd">23dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
